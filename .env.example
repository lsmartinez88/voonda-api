# Base de datos PostgreSQL (Supabase/Neon/Railway/etc.)
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Secret (generar con: openssl rand -hex 64)
JWT_SECRET="your-super-secret-jwt-key-here"

# Puerto de la aplicación (Vercel usa proceso automático)
PORT=3001

# URL del frontend para CORS
FRONTEND_URL="https://yourfrontend.vercel.app"

# Entorno
NODE_ENV="production"

# Opcional: Para logging y debug
LOG_LEVEL="info"